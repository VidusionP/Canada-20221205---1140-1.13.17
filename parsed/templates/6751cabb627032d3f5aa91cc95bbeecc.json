{
  "components/products/options/swatch": "<style>\r\n    .form-option-image2 {\r\n        width:80px; \r\n        height: 80px;\r\n    }\r\n    @media (min-width: 768px) {\r\n        .form-option-image2 {\r\n            height: 120px;\r\n            width: 120px;\r\n        }\r\n    }\r\n    @media (min-width: 920px) {\r\n        .form-option-image2 {\r\n            height: 87px;\r\n            width: 87px;\r\n        }\r\n    }\r\n    @media (min-width: 1261px) {\r\n        .form-option-image2 {\r\n            height: 75px;\r\n            width: 75px;\r\n        }\r\n        .form-image-box {\r\n            width: 200px;\r\n            height: 200px;\r\n            box-shadow:-2px 3px 5px 2px rgba(0, 0, 0, 0.493);\r\n        }\r\n        .form-image-expanded {\r\n            width: 100%;\r\n            height: 100%;\r\n        }\r\n    }\r\n    @media (min-width: 1500px) {\r\n        .form-option-image2 {\r\n            height: 110px;\r\n            width: 110px;\r\n        }\r\n        .form-image-box {\r\n            width: 250px;\r\n            height: 250px;\r\n            box-shadow:-2px 3px 5px 2px rgba(0, 0, 0, 0.493);\r\n        }\r\n    }\r\n</style>\r\n\r\n<div class=\"form-field\" data-product-attribute=\"swatch\">\r\n    <label class=\"form-label form-label--alternate form-label--inlineSmall\">\r\n        {{this.display_name}}:\r\n        <span data-option-value></span>\r\n\r\n        {{#if required}}\r\n            <small>{{lang 'common.required'}}</small>\r\n        {{/if}}\r\n    </label>\r\n\r\n    {{#each this.values}}\r\n        <input class=\"form-radio\" type=\"radio\" name=\"attribute[{{../id}}]\" value=\"{{id}}\" id=\"attribute_{{id}}\" {{#if selected}}checked{{/if}} {{#if ../required}}required{{/if}}>\r\n        <label class=\"form-option form-option-swatch\" for=\"attribute_{{id}}\" data-product-attribute-value=\"{{id}}\">\r\n            {{#if image}}\r\n                <span class='form-option-variant form-option-variant--pattern form-option-image2' title=\"{{this.label}}\" style=\"background-image: url('{{getImage image 'core-swatch'}}'); background-size: contain;\"></span>\r\n            {{/if}}\r\n            {{#if data.[2]}}\r\n                <span class='form-option-variant form-option-variant--color' title=\"{{this.label}}\" style=\"background-color: #{{data.[0]}}\"></span>\r\n                <span class='form-option-variant form-option-variant--color' title=\"{{this.label}}\" style=\"background-color: #{{data.[1]}}\"></span>\r\n                <span class='form-option-variant form-option-variant--color' title=\"{{this.label}}\" style=\"background-color: #{{data.[2]}}\"></span>\r\n            {{else}}\r\n                {{#if data.[1]}}\r\n                    <span class='form-option-variant form-option-variant--color' title=\"{{this.label}}\" style=\"background-color: #{{data.[0]}}\"></span>\r\n                    <span class='form-option-variant form-option-variant--color' title=\"{{this.label}}\" style=\"background-color: #{{data.[1]}}\"></span>\r\n                {{else}}\r\n                    {{#if data.[0]}}\r\n                        <span class='form-option-variant form-option-variant--color' title=\"{{this.label}}\" style=\"background-color: #{{data.[0]}}\"></span>\r\n                    {{/if}}\r\n                {{/if}}\r\n            {{/if}}\r\n            {{#if pattern}}\r\n                <span class=\"form-option-expanded form-image-box\">\r\n                    <span class=\"form-option-image form-image-expanded\" style=\"background-image: url('{{getImage image 'core-swatch'}}');\"></span>\r\n                </span>\r\n            {{/if}}\r\n        </label>\r\n    {{/each}}\r\n</div>\r\n"
}